<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="appGenerateCV.CVFormPage"
             Title="Formulario CV">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20">
                <Label Text="Datos CV" FontSize="24" HorizontalOptions="CenterAndExpand"/>

                <Label Text="Nombres completos:" FontAttributes="Italic"/>
                <Entry x:Name="name"/>
                <Label Text="Correo electrónico:" FontAttributes="Italic"/>
                <Entry x:Name="email" Keyboard="Email"/>
                <Label Text="Teléfono:" FontAttributes="Italic"/>
                <Entry x:Name="phone" Keyboard="Telephone"/>
                <Label Text="Dirección:" FontAttributes="Italic"/>
                <Entry x:Name="address"/>
                <Label Text="Idiomas:" FontAttributes="Italic"/>
                <Entry x:Name="languages"/>

                <Label Text="Experiencia:" FontAttributes="Italic"/>
                <Editor x:Name="experience" HeightRequest="50"/>

                <Label Text="Formación:" FontAttributes="Italic"/>
                <Editor x:Name="education" HeightRequest="50"/>

                <Button Text="Enviar" Clicked="OnSubmitClicked" BackgroundColor="Green"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
